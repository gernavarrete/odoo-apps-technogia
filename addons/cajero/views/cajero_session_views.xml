<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cajero_session_tree" model="ir.ui.view">
        <field name="name">cajero.session.tree</field>
        <field name="model">cajero.session</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'open'" decoration-danger="state == 'close'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="state"/>
                <field name="opening_amount"/>
                <field name="closing_amount"/>
                <field name="to_invoice_count"/>
                <field name="invoiced_count"/>
            </tree>
        </field>
    </record>

    <record id="view_cajero_session_form" model="ir.ui.view">
        <field name="name">cajero.session.form</field>
        <field name="model">cajero.session</field>
        <field name="arch" type="xml">
            <form string="Sesión de cajero" class="o_cajero_dashboard">
                <header>
                    <button name="action_open_session" type="object" string="Abrir" states="draft" class="btn-primary"/>
                    <button name="action_close_session" type="object" string="Cerrar" states="open"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,close"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_orders" type="object" class="oe_stat_button" icon="fa-list">
                            <div class="o_stat_info">
                                <field name="to_invoice_count" string="Por facturar" widget="statinfo"/>
                            </div>
                        </button>
                        <button name="action_view_orders" type="object" class="oe_stat_button" icon="fa-check">
                            <div class="o_stat_info">
                                <field name="invoiced_count" string="Facturadas" widget="statinfo"/>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_id"/>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="opening_amount"/>
                            <field name="closing_amount"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Órdenes">
                            <field name="order_ids" context="{'default_session_id': active_id}">
                                <tree editable="bottom">
                                    <field name="sale_order_id"/>
                                    <field name="partner_id" readonly="1"/>
                                    <field name="amount_total" readonly="1"/>
                                    <field name="state" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cajero_sessions" model="ir.actions.act_window">
        <field name="name">Sesiones de cajero</field>
        <field name="res_model">cajero.session</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"default_name": "Sesión"}</field>
    </record>
</odoo>
