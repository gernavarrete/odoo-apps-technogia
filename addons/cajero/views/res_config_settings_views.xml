<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_cajero" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.cajero</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30"/>
        <field name="arch" type="xml">
            <form string="Ajustes de Cajero">
                <sheet>
                    <group string="Caja">
                        <field name="cajero_cashbox_name"/>
                        <field name="cajero_login_as_employee"/>
                        <field name="cajero_allow_employee_switch"/>
                    </group>
                    <group string="Pagos">
                        <field name="cajero_payment_method_ids" widget="many2many_tags"/>
                        <field name="cajero_cash_rounding_method_id"/>
                        <field name="cajero_send_receipt_whatsapp"/>
                        <field name="cajero_print_portal_info"/>
                    </group>
                    <group string="Contabilidad">
                        <field name="cajero_default_tax_id"/>
                        <field name="cajero_temp_account_id"/>
                        <field name="cajero_default_order_journal_id"/>
                        <field name="cajero_default_invoice_journal_id"/>
                        <field name="cajero_auto_invoice"/>
                        <field name="cajero_foreign_currency_journal_id"/>
                        <field name="cajero_local_currency_journal_id"/>
                    </group>
                    <group string="Permisos">
                        <field name="cajero_basic_permissions" widget="radio"/>
                        <field name="cajero_advanced_permissions" widget="radio"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
