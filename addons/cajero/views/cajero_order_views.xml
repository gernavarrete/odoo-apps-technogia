<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cajero_order_tree" model="ir.ui.view">
        <field name="name">cajero.order.tree</field>
        <field name="model">cajero.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="session_id"/>
                <field name="partner_id"/>
                <field name="amount_total"/>
                <field name="state"/>
                <button name="action_register_payment" type="object" string="Cobrar" class="btn-primary"/>
            </tree>
        </field>
    </record>

    <record id="view_cajero_order_form" model="ir.ui.view">
        <field name="name">cajero.order.form</field>
        <field name="model">cajero.order</field>
        <field name="arch" type="xml">
            <form string="Orden del cajero">
                <header>
                    <button name="action_open_sale_order" type="object" string="Ver orden" class="btn-secondary"/>
                    <button name="action_open_invoice" type="object" string="Ver documento" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="session_id"/>
                            <field name="sale_order_id"/>
                            <field name="invoice_id"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="amount_total"/>
                            <field name="state"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cajero_orders" model="ir.actions.act_window">
        <field name="name">Ã“rdenes del cajero</field>
        <field name="res_model">cajero.order</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>
</odoo>
