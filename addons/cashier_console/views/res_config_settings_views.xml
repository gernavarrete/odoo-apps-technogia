<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_cashier_console" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.cashier.console</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="30"/>
        <field name="arch" type="xml">
            <form string="Cashier Console Settings">
                <sheet>
                    <group string="Cashbox">
                        <field name="cashier_console_cashbox_name"/>
                        <field name="cashier_console_login_as_employee"/>
                        <field name="cashier_console_allow_employee_switch"/>
                    </group>
                    <group string="Payments">
                        <field name="cashier_console_payment_method_ids" widget="many2many_tags"/>
                        <field name="cashier_console_cash_rounding_method_id"/>
                        <field name="cashier_console_send_receipt_whatsapp"/>
                        <field name="cashier_console_print_portal_info"/>
                    </group>
                    <group string="Accounting">
                        <field name="cashier_console_default_tax_id"/>
                        <field name="cashier_console_temp_account_id"/>
                        <field name="cashier_console_default_order_journal_id"/>
                        <field name="cashier_console_default_invoice_journal_id"/>
                        <field name="cashier_console_auto_invoice"/>
                        <field name="cashier_console_foreign_currency_journal_id"/>
                        <field name="cashier_console_local_currency_journal_id"/>
                    </group>
                    <group string="Permissions">
                        <field name="cashier_console_basic_permissions" widget="radio"/>
                        <field name="cashier_console_advanced_permissions" widget="radio"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
