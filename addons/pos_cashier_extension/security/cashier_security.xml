<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="module_category_cashier_console_standalone" model="ir.module.category">
            <field name="name">Cashier Console</field>
            <field name="description">Access levels for the Cashier Console.</field>
            <field name="sequence">100</field>
        </record>

        <record id="group_cashier_console_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_cashier_console_standalone" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        </record>

        <record id="group_cashier_console_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_cashier_console_standalone" />
            <field name="implied_ids"
                eval="[(4, ref('group_cashier_console_user')), (4, ref('base.group_system'))]" />
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
        </record>

    </data>
</odoo>