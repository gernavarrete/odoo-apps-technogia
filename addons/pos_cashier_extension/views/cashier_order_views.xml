<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cashier_console_order_list" model="ir.ui.view">
        <field name="name">cashier.console.order.list</field>
        <field name="model">cashier.console.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="session_id" />
                <field name="partner_id" />
                <field name="amount_total" />
                <field name="state" />
                <button name="action_register_payment" type="object" string="Collect"
                    class="btn-primary" />
            </list>
        </field>
    </record>

    <record id="view_cashier_console_order_form" model="ir.ui.view">
        <field name="name">cashier.console.order.form</field>
        <field name="model">cashier.console.order</field>
        <field name="arch" type="xml">
            <form string="Cashier order">
                <header>
                    <button name="action_open_sale_order" type="object" string="Open order"
                        class="btn-secondary" />
                    <button name="action_open_invoice" type="object" string="Open document"
                        class="btn-primary" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="session_id" />
                            <field name="sale_order_id" />
                            <field name="invoice_id" />
                        </group>
                        <group>
                            <field name="partner_id" />
                            <field name="amount_total" />
                            <field name="state" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cashier_console_orders" model="ir.actions.act_window">
        <field name="name">Cashier orders</field>
        <field name="res_model">cashier.console.order</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
    </record>
</odoo>