<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cashier_config_list" model="ir.ui.view">
        <field name="name">cashier.config.list</field>
        <field name="model">cashier.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="journal_id" />
                <field name="cash_journal_id" />
            </list>
        </field>
    </record>

    <record id="view_cashier_config_form" model="ir.ui.view">
        <field name="name">cashier.config.form</field>
        <field name="model">cashier.config</field>
        <field name="arch" type="xml">
            <form string="Cashier Console Box">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" />
                            <field name="journal_id" />
                            <field name="cash_journal_id" />
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cashier_config" model="ir.actions.act_window">
        <field name="name">Cashier Boxes</field>
        <field name="res_model">cashier.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Cashier Box Configuration.
            </p>
        </field>
    </record>
</odoo>