<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cashier_console_session_list" model="ir.ui.view">
        <field name="name">cashier.console.session.list</field>
        <field name="model">cashier.console.session</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'open'" decoration-danger="state == 'close'">
                <field name="name" />
                <field name="employee_id" />
                <field name="state" />
                <field name="opening_amount" />
                <field name="closing_amount" />
                <field name="to_invoice_count" />
                <field name="invoiced_count" />
            </list>
        </field>
    </record>

    <record id="view_cashier_console_session_form" model="ir.ui.view">
        <field name="name">cashier.console.session.form</field>
        <field name="model">cashier.console.session</field>
        <field name="arch" type="xml">
            <form string="Cashier session" class="o_cashier_console_dashboard">
                <header>
                    <button name="action_open_session" type="object" string="Open"
                        invisible="state != 'draft'" class="btn-primary" />
                    <button name="action_close_session" type="object" string="Close"
                        invisible="state != 'open'" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,close" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_orders" type="object" class="oe_stat_button"
                            icon="fa-list">
                            <div class="o_stat_info">
                                <field name="to_invoice_count" string="To invoice" widget="statinfo" />
                            </div>
                        </button>
                        <button name="action_view_orders" type="object" class="oe_stat_button"
                            icon="fa-check">
                            <div class="o_stat_info">
                                <field name="invoiced_count" string="Invoiced" widget="statinfo" />
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="employee_id" />
                            <field name="company_id" />
                        </group>
                        <group>
                            <field name="opening_amount" />
                            <field name="closing_amount" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Orders">
                            <field name="order_ids">
                                <list editable="bottom">
                                    <field name="sale_order_id" />
                                    <field name="partner_id" readonly="1" />
                                    <field name="amount_total" readonly="1" />
                                    <field name="state" readonly="1" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cashier_console_sessions" model="ir.actions.act_window">
        <field name="name">Cashier sessions</field>
        <field name="res_model">cashier.console.session</field>
        <field name="view_mode">list,form</field>
        <field name="context">{"default_name": "Session"}</field>
    </record>
</odoo>