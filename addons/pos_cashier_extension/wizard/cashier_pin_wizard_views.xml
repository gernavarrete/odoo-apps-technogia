<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cashier_pin_wizard_form" model="ir.ui.view">
        <field name="name">cashier.pin.wizard.form</field>
        <field name="model">cashier.pin.wizard</field>
        <field name="arch" type="xml">
            <form string="Enter PIN">
                <group>
                    <div class="text-center mb-4">
                        <h3>Please enter your PIN</h3>
                    </div>
                    <group>
                        <field name="pin" widget="password" nolabel="1" placeholder="****" />
                        <field name="session_id" invisible="1" />
                        <field name="operation" invisible="1" />
                    </group>
                </group>
                <footer>
                    <button name="action_verify_pin" type="object" string="Confirm"
                        class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>